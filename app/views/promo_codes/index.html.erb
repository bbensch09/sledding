<div id="middle" class="container">
  <div class="white">

<p id="notice"><%= notice %></p>

<h1>Promo Codes</h1>

<%= link_to 'Create New Promo Code', new_promo_code_path %>
<%= link_to 'Generate 100 1-ticket Redemption Codes', generate_1_ticket_bulk_promo_codes_path, method: :post, class: 'btn btn-success'  %>
<%= link_to 'Generate 100 2-ticket Redemption Codes', generate_2_ticket_bulk_promo_codes_path, method: :post, class: 'btn btn-success'  %>


<table class="instructors-table">
  <thead>
    <tr>
      <th>Promo code</th>
      <th>Status</th>
      <th>Discount</th>
      <th>Valid Redemptions</th>
      <th>Description</th>
      <th>Single use</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promo_codes.each do |promo_code| %>
      <tr>
        <td><%= promo_code.promo_code %></td>
        <td><%= promo_code.status %></td>
        <td><%= promo_code.discount %></td>
        <td><%= promo_code.valid_redemptions %></td>
        <td><%= promo_code.description %></td>
        <td><%= promo_code.single_use %></td>
        <td><%= link_to 'Show', promo_code %></td>
        <td><%= link_to 'Edit', edit_promo_code_path(promo_code) %></td>
        <td><%= link_to 'Destroy', promo_code, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>
</div>