<section class="bg-primary" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-xs12 text-center">
                <hr class="hr-black">
                <h3 class="beta-sign-up-offer" id="subscribe">
                   Not ready to book today? <br> Enter your email below to subscribe to free weekly offers and Tahoe weather reports.
               </h3>
               <div class="col-md-12 beta_user-sign-up">
                <%= form_for(@beta_user = BetaUser.new) do |f| %>
                    <% if @beta_user.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(@beta_user.errors.count, "error") %> prohibited this beta_user from being saved:</h2>
                          <ul>
                              <% @beta_user.errors.full_messages.each do |message| %>
                              <li><%= message %></li>
                              <% end %>
                          </ul>
                        </div>
                    <% end %>
                    <div class="email-input">
                        <%= f.email_field :email, autofocus: false, class:"black-text form-control beta-sign-up", placeholder:"Enter Email", required: true  %>
                        <%= f.submit "Subscribe for Updates", class:"btn btn-success btn-lg page-scroll" %>
                    </div>
                <% end %>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
