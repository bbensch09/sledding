<% if Location.find(24).partner_status == 'Inactive' %>
    <% @cta_visibility = "hidden" %>
    
        <section class="bg-white" id="buy-tickets" >
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-xs12">
                        <h2 class="warning">
                            Unfortunately online sledding tickets are currently not available. Please contact guest services at (530) 583-4242 for the latest information on when the sled hill will be open.
                        </h2>
                    </div>
                </div>
            </div>
        </section>

    <% else %>    
    <% @cta_visibility = "active" %>

<% end %>    

