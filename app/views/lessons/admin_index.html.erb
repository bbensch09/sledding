            <td class="lessons-table-cells lesson-instructor"><%= link_to lesson.confirmation_number, lesson, class: "btn btn-default btn-sledding-admin" %></td>
            <td class="lessons-table-cells"><%= link_to 'Print', release_of_liability_path(lesson.id), target:"_blank", class:"btn btn-sledding-admin" %>
            <td class="lessons-table-cells"><%= lesson.phone_number %></td>
            <td class="lessons-table-cells lesson-student"><%= lesson.name %></td>
            <td class="lessons-table-cells lesson-student"><%= lesson.guest_email %></td>
