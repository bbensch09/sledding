<div class='nested-fields student-box'>
  <%= f.inputs do %>
    <div class='row'>
      <div class="col-md-12"><h4 class="warning-text"> <b>Note:</b> Minimum age for group lessons is 8 years old. Students under 8 must sign up for a private lesson at <a href="www.snowschoolers.com" class="navy-link">www.snowschoolers.com</a>.</h4>
      </div>
      <div class='col-md-6'>
        <label>Student Name</label>
        <span class='remove-student'>(<%= link_to_remove_association "Remove Student", f, class: 'remove-student' %>)</span>
        <%= f.text_field :name, placeholder: "Full name of student", class: "form-control", label: false, required:true %>                      
      </div>
      <div class='col-md-3'>
        <label>Age</label> 
        <%= f.text_field :age_range, class: "form-control", label: false, required:true %>
      </div>
      <div class='col-md-3'>
        <label>Gender</label>
        <%= f.select :gender, ['Male', 'Female'], {}, {class: 'gender form-control', required:true, include_blank: 'Gender'} %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-12'>
        <label>About the student</label>
        <%= f.input :relationship_to_requester, as: :select, collection: ['I am the student.', 'Student is a friend.', 'Student is my significant other.','Student is my child.'], selected: 'I am the student.', include_blank: 'How is this student related to you?', :input_html => { :class => 'relationship-student'}, label: false %>
      </div>      
      <div class='col-md-12'>
            <label>Ability level </label>
            <%= f.select :most_recent_level,
              ["Level 1 - first-time ever, no previous experience.",
              "Level 2 - can safely stop on beginner green circle terrain.",
              "Level 3 - can makes wedge turns (heel-side turns for snowboarding) in both directions on beginner terrain.",
              "Level 4 - can link turns with moderate speed on all beginner terrain.",
              "Level 5+ - can make parralel turns and savely navigate all intermediate terrain."], {}, {class: 'form-control ability-level', required:true,
               include_blank: "Approximately what level of ability is the student?", label: false} %>              
      </div>
      <!-- <div class='col-md-12'>
            <label>Other sports experience </label>
            <%= f.input :other_sports_experience, placeholder: 'plays recreational soccer, is a varsity tennis player, casual runner, etc.', label: false %>
      </div> -->
          <% if current_user %>
          <%= f.input :requester_id, as: :hidden, input_html: { value: current_user.id } %>
          <% end %>
    </div>
  <% end %>
</div>
