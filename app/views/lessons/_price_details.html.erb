<h3>Pricing Details</h3>

<div class="col-md-12 col-xs-12">
</div>
<div class='colm-md-12 col-xs-12'>
  <ul>    
    <% if @lesson.product %>
    <li><span class="lesson-detail-topic">Price per student:</span> <%= number_to_currency((@lesson.price.to_f)/(@lesson.students.count)) %></li>
    <% end %>
    <li><span class="lesson-detail-topic">Number of students:</span> <%= @lesson.students.count %></li>
    <li><span class="lesson-detail-topic">Total price:</span> <%= number_to_currency(@lesson.price) %></li>
  </ul>
</div>