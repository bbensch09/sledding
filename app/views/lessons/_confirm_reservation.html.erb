            <h1>Authorize Payment to Secure your Reservation</h1>
            <div id="booking-details-container" class="booking-details">
              <div class="row">
                <div class="col-xs-3">
                  <b>Date:</b>
                </div>
                <div class="col-xs-9">
                    <%= @lesson.lesson_time.date.strftime("%A %b #{@lesson.lesson_time.date.day.ordinalize} %Y") %>
                </div>
              </div>                              
              <div class="row">
                <div class="col-xs-3">
                  <b>Price:</b>
                </div>
                <div class="col-xs-9">
                  <% amount = @lesson.price.to_f*100 %>
                  <%= number_to_currency(@lesson.price) %>
                  <br>
                      <ul>
                        <% @lesson.students.each do |student| %>
                            <li><%= student.name %>, age <%= student.age_range %></li>
                        <% end %>
                      </ul>
                </div>
              </div>  
            </div>

              
            <div class="col-md-12">
              <label class="amount">
              </label>
              <%= link_to 'Edit Reservation', edit_lesson_path(@lesson), class: "center btn btn-sm btn-primary" %>
              <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                      data-description="Thanks for booking at Granlibakken!"
                      data-name="Granlibakken Sledding"
                      data-image="http://granlibakken.com/wp-content/uploads/cropped-tin-g-32x32.png"
                      data-amount=<%= amount %>
                      data-locale="auto"
                      data-zip-code="true">
              </script>
                <p class="nonrefundable_disclaimer">
                  <br>
                    You may cancel or modify your sledding hill ticket up to 24 hours before the day of your reservation. Any cancellation made less than 24 hours before the lesson time will not be refundable, regardless of weather conditions. Please email <a href="mailto:frontdesk@granlibakken.com">frontdesk@granlibakken.com</a> to initiate a cancellation.
                </p>
            </div>

        <% end %>
<div class="col-md-12">
  <hr class="deposit-hr-navy">
</div>

</div>
